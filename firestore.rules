rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Kullanıcı giriş yapmış mı?
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Kullanıcı kendi verisine mi erişiyor?
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Kullanıcı admin mi?
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Geçerli e-posta formatı
    function isValidEmail(email) {
      return email.matches('.*@.*\\..*');
    }
    
    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      // Kullanıcılar kendi profillerini okuyabilir
      // Adminler tüm kullanıcıları okuyabilir
      allow read: if isOwner(userId) || isAdmin();
      
      // Kayıt sırasında kullanıcı kendi dokümanını oluşturabilir
      // Rol sadece 'user' veya 'admin' olabilir (admin için özel e-posta kontrolü)
      allow create: if isOwner(userId) && 
                       request.resource.data.keys().hasAll(['name', 'email', 'role']) &&
                       (request.resource.data.role == 'user' || 
                        (request.resource.data.role == 'admin' && 
                         request.resource.data.email == 'direncuy@gmail.com'));
      
      // Kullanıcılar kendi profillerini güncelleyebilir (rol değiştirilemez)
      allow update: if isOwner(userId) && 
                       request.resource.data.role == resource.data.role;
      
      // Adminler herhangi bir kullanıcıyı güncelleyebilir
      allow update: if isAdmin();
      
      // Kullanıcı silme - sadece admin
      allow delete: if isAdmin();
    }
    
    // ============================================
    // SHOPS COLLECTION (Dükkanlar)
    // ============================================
    match /shops/{shopId} {
      // Herkes aktif dükkanları okuyabilir
      // Adminler tüm dükkanları (aktif/pasif) okuyabilir
      allow read: if true;
      
      // Sadece adminler dükkan oluşturabilir
      allow create: if isAdmin() &&
                       request.resource.data.keys().hasAll(['name', 'city', 'isActive']);
      
      // Sadece adminler dükkan güncelleyebilir
      allow update: if isAdmin();
      
      // Sadece adminler dükkan silebilir
      allow delete: if isAdmin();
    }
    
    // ============================================
    // PRODUCTS COLLECTION (Ürünler)
    // ============================================
    match /products/{productId} {
      // Herkes aktif ürünleri okuyabilir
      // Adminler tüm ürünleri (aktif/pasif) okuyabilir
      allow read: if true;
      
      // Sadece adminler ürün oluşturabilir
      allow create: if isAdmin() &&
                       request.resource.data.keys().hasAll(['name', 'shopId', 'price', 'isActive']) &&
                       request.resource.data.price > 0;
      
      // Sadece adminler ürün güncelleyebilir
      allow update: if isAdmin();
      
      // Sadece adminler ürün silebilir
      allow delete: if isAdmin();
    }
    
    // ============================================
    // ORDERS COLLECTION (Siparişler)
    // ============================================
    match /orders/{orderId} {
      // Kullanıcılar sadece kendi siparişlerini okuyabilir
      // Adminler tüm siparişleri okuyabilir
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || 
                     isAdmin();
      
      // Giriş yapmış kullanıcılar sipariş oluşturabilir
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'items', 'totalPrice', 'status']) &&
                       request.resource.data.totalPrice > 0;
      
      // Sadece adminler sipariş durumunu güncelleyebilir
      allow update: if isAdmin();
      
      // Siparişler silinemez (denetim izi için)
      allow delete: if false;
    }
    
    // ============================================
    // BLOGPOSTS COLLECTION (Blog Yazıları)
    // ============================================
    match /blogposts/{postId} {
      // Herkes yayınlanmış blog yazılarını okuyabilir
      // Adminler tüm yazıları (taslak/yayın) okuyabilir
      allow read: if resource.data.status == 'published' || isAdmin();
      
      // Sadece adminler blog yazısı oluşturabilir
      allow create: if isAdmin() &&
                       request.resource.data.keys().hasAll(['title', 'type', 'thumbnail', 'status']);
      
      // Sadece adminler blog yazısı güncelleyebilir
      allow update: if isAdmin();
      
      // Sadece adminler blog yazısı silebilir
      allow delete: if isAdmin();
    }
    
    // ============================================
    // DEFAULT DENY - Tanımlanmamış tüm erişimler engellenir
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
